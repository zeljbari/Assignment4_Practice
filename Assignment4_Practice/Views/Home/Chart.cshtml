@{
    ViewData["Title"] = "Chart";
}



@model Assignment4_Practice.Models.EF_Models.ChartModel



<!DOCTYPE html>



<html lang="en" xmlns="http://www.w3.org/1999/xhtml">



<head>
    <meta charset="utf-8" />
    <title>Inventory</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.js"></script>
</head>
<body>
 <p>
        The chart below describes the proportion of reports that fall under each classification category.
        The data was derived from a sample 500 reports from the FDA website.
    </p>
    <br />
    <h2 style="text-align:center"> Report Count Per Classification</h2>


    <canvas id="barchartexample" width="800" height="450"></canvas>



    <script>
    new Chart(document.getElementById("barchartexample"), {
      type: '@Model.ChartType',
      data: {
        labels: [@Html.Raw(@Model.Labels)],
        datasets: [
          {
            label: "Count",
            backgroundColor: [@Html.Raw(@Model.Colors)],
            data: [@Model.Data]
          }
        ]
      },
      options: {
        legend: { display: false },
        title: {
          display: true,
          text: '@Model.Title'
        }
      }
    });
    </script>
  <h2 style="text-align:center"> Entity Relationship Diagram</h2>

   <img style="text-align:center" src="~/images/ERD.jpg" />

</body>
</html>
